generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AuditLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  actor     String
  action    String
  resource  String
  detail    Json?
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  category  String
  action    String
  label     String?
  metadata  Json?
}
